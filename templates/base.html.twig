<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}1gscop{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<header>
					<img class="header--logo" src="{{ asset('build/images/Logo_1gscop.png') }}"/>
				<nav>
					<ul>
						{% if app.request.attributes.get('_route') == 'home' %}
							<li><a href="{{ path("reference") }}">Références</a></li>
						{% endif %}
						{% if app.request.attributes.get('_route') == 'presentation' %}
							<li><a href="{{ path("home") }}">Accueil</a></li>
							<li><a href="{{ path('professionnal_list') }}">Professionnels</a></li>
							<li><a href="{{ path('services_list') }}">Services</a></li>
						{% endif %}
						{% if app.request.attributes.get('_route') == 'professionnal_list' %}
							<li><a href="{{ path('home') }}">Accueil</a></li>
							<li><a href="{{ path('services_list') }}">Services</li></a>
							<li><a href="{{ path('home') }}">Références</li></a>
						{% endif %}
						{% if app.request.attributes.get('_route') == 'professionnal_show' %}
							<li><a href="{{ path('home') }}">Accueil</a></li>
							<li><a href="{{ path('professionnal_list') }}">Professionnels</a></li>
							<li><a href="{{ path('services_list') }}">Services</li></a>
							<li><a href="{{ path('home') }}">Références</li></a>
						{% endif %}
						{% if app.request.attributes.get('_route') == 'services_list' %}
							<li><a href="{{ path('home') }}">Accueil</a></li>
							<li><a href="{{ path('professionnal_list') }}">Professionnels</a></li>
							<li><a href="{{ path('services_list') }}">Services</li></a>
							<li><a href="{{ path('reference') }}">Références</li></a>

						{% endif %}
						{% if app.request.attributes.get('_route') == 'services_show' %}
							<li><a href="{{ path('home') }}">Accueil</a></li>

							<li><a href="{{ path('professionnal_list') }}">Professionnels</a></li>
							<li><a href="{{ path('services_list') }}">Services</li></a>
							<li><a href="{{ path('reference') }}">Références</li></a>

						{% endif %}
						{% if app.request.attributes.get('_route') == 'contactpro' %}
							<li><a href="{{ path('home') }}">Accueil</a></li>
						{% endif %}
					</ul>
				</nav>
				<div class="header--form-links">
					<p><a href="{{ path('contactpro') }}">Nous rejoindre</a></p>
					<p><a href="{{ path('contactus') }}">Nous contacter</a></p>
				</div>
			</header>
		{% endblock %}

		{% block pageContainer %}{% endblock %}
		{% block footer %}
			<footer>
				{% if app.request.attributes.get('_route') == 'home' %}
					<div class="footer-home">
						<div id="footer-left">
							<p>contact@1gscop.fr30</p><p>rue André Theuriet37000</p><p>Tours06 58 39 21 46</p>
						</div>
						<div id="footer-right">
							<p>Partenaire de</p>
							<a href="https://www.nova-bat.coop/" target="blank"><img class="footer-logo-partenaire" src="{{ asset('build/images/Logo_novabat.png') }}"/></a>
						</div>
					</div>
				{% else %}
					<p>contact@1gscop.fr30</p>
					<p>rue André Theuriet<br>37000 Tours</p>
					<p>06 58 39 21 46</p>
				{% endif %}
			</footer>
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
