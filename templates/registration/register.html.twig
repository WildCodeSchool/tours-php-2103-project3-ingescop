{% extends "base.html.twig" %}

{% block pageContainer %}
<div class="">
    <div class="flex justify-center">
    {{ form_start(form, {'attr': {'class': 'box-content p-4'}}) }}
        <div class="decoration-clone bg-gray-200 my-48 p-20 rounded-xl border-2">
                <div class="flex flex-col text-center space-y-6 items-center justify-center">
                    <h2 class="text-center text-5xl font-semibold text-gray-700 my-5">Cr√©ation d'un Administrateur</h2>
                        <div>
                        {{ form_widget(form.username, {'attr': {'class': 'shadow appearance-none h-15 w-32 p-4 w-full focus:outline-none border-b-2 border-yellow-500 placeholder-gray-400 text-4xl text-center m-3'}}) }}
                        </div>
                        <div>
                        {{ form_widget(form.password.first, {'attr': {'class': 'shadow appearance-none h-15 w-32 p-4 w-full focus:outline-none border-b-2 border-yellow-500 placeholder-gray-400 text-4xl text-center m-3'}}) }}
