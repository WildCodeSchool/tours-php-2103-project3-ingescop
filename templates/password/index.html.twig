{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block pageContainer %}
    {% block flashMessage %}
        {% for message in app.flashes('message') %}
            <div class="border-2 bg-green-200 text-2xl py-4 px-16 h-16 absolute">
                   <p> &#10004; {{ message }} </p>
            </div>
        {% endfor %}
    {% endblock %}
    {% if app.user %}
        <a id="panelconfig-link" href="{{ path('admin_panelconfig') }}"><strong>&#11013;</strong> Retour au panneau de configuration</a>
    {% endif %}
<div class="">
    <div class="flex justify-center">
        {{ form_start(form, {'attr': {'class': 'box-content p-4'}}) }}
        <div class="decoration-clone bg-gray-200 my-48 p-20 rounded-xl border-2">
            <div class="flex flex-col text-center space-y-6 items-center justify-center">
                <h2 class="text-center text-5xl font-semibold text-gray-700 my-5">Changement de mot de passe</h2>
                <div>
                    {{ form_widget(form.oldPassword, {'attr': {'class': 'shadow appearance-none h-15 w-32 p-4 w-full focus:outline-none border-b-2 border-yellow-500 placeholder-gray-400 text-4xl text-center m-3'}}) }}
                </div>
                <div>
                    {{ form_errors(form.oldPassword) }}
                </div>
                <div>
                    {{ form_row(form.password.first, {'attr': {'class': 'shadow appearance-none h-15 w-32 p-4 w-full focus:outline-none border-b-2 border-yellow-500 placeholder-gray-400 text-4xl text-center m-3'}}) }}
                </div>
                <div>
                    {{ form_row(form.password.second, {'attr': {'class': 'shadow appearance-none h-15 w-32 p-4 w-full focus:outline-none border-b-2 border-yellow-500 placeholder-gray-400 text-4xl text-center m-3'}}) }}
                </div>
                <div>
                    {{ form_errors(form.password) }}
                </div>
                <input type ="submit" value="Valider" class="bg-gray-700 hover:bg-yellow-600 transition duration-500 cursor-pointer text-white text-4xl font-bold py-6 px-9 rounded-full focus:outline-none focus:shadow-outline">
            </div>
        </div>
    </div>
</div>
        {{ form_end(form) }}
{% endblock %}