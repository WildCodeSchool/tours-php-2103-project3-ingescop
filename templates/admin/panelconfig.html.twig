{% extends 'base.html.twig' %}

{% block title %}Panneau de configuration{% endblock %}

{% block pageContainer %}
    {% block flashMessage %}
        {% for message in app.flashes('notice') %}
            <div class="border-2 bg-green-200 text-2xl py-4 px-16 h-16 absolute">
                   <p> &#10004; {{ message }} </p>
            </div>
        {% endfor %}
        {% for message in app.flashes('Valid') %}
            <div class="border-2 bg-green-200 text-2xl py-4 px-16 h-16 absolute">
                   <p> &#10004; {{ message }} </p>
            </div>
        {% endfor %}
    {% endblock %}
    <h1>PANNEAU DE CONFIGURATION</h1>
    <div class="flex justify-center">
    <a id="change-password" href="{{ path('reset-password') }}"> Changer de mot de passe</a>
    </div>
    <div class="flex flex-col w-6/12 m-auto">
        <h1>Liste des services</h1>
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8 bg-gray-200 rounded-xl">
            <div class="py-12 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="text-5xl font-semibold text-gray-700 bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left">Nom</th>
                                <th scope="col" class="px-6 py-3 text-left">Catégorie</th>
                                <th scope="col" class="px-6 py-3 text-left">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-4xl font-semibold text-gray-700">
                        {% for service in services %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">{{ service.name }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ service.category }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <a href="{{ path("admin_editservice", {"id": service.id}) }}"><img src="{{ asset('build/images/crayon.png') }}"></a>
                                    <a href="{{ path("services_show", {"id": service.id}) }}"><img src="{{ asset('build/images/oeil.png') }}"></a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="16">Pas d'enregistrements trouvés</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="flex flex-col text-right">
        <a href="{{ path("admin_newservice") }}"><input type ="submit" value="Créer un service" class="bg-gray-700 hover:bg-yellow-600 transition duration-500 cursor-pointer text-white text-4xl font-bold py-6 px-9 rounded-full focus:outline-none focus:shadow-outline"></a>
        </div>
    </div>
    <div class="flex flex-col w-6/12 m-auto">
        <h1>Liste des professionnels</h1>
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8 bg-gray-200 rounded-xl">
            <div class="py-12 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="text-5xl font-semibold text-gray-700 bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left">Nom</th>
                                <th scope="col" class="px-6 py-3 text-left">Métier</th>
                                <th scope="col" class="px-6 py-3 text-left">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-4xl font-semibold text-gray-700">

                            {% for professionnal in pro %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">{{ professionnal.name }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ professionnal.job }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <a href="{{ path("admin_editpro", {"id": professionnal.id}) }}"><img src="{{ asset('build/images/crayon.png') }}"></a>
                                    <a href="{{ path("professionnal_show", {"id": professionnal.id}) }}"><img src="{{ asset('build/images/oeil.png') }}"></a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="16">Pas d'enregistrements trouvés</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="flex flex-col text-right">
        <a href="{{ path("admin_newpro") }}"><input type ="submit" value="Créer un professionnel" class="bg-gray-700 hover:bg-yellow-600 transition duration-500 cursor-pointer text-white text-4xl font-bold py-6 px-9 rounded-full focus:outline-none focus:shadow-outline"></a>
        </div>
    </div>
    <div class="flex flex-col w-6/12 m-auto">
        <h1>Liste des références</h1>
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8 bg-gray-200 rounded-xl">
            <div class="py-12 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="text-5xl font-semibold text-gray-700 bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left">Nom</th>
                                <th scope="col" class="px-6 py-3 text-left">EntryDate</th>
                                <th scope="col" class="px-6 py-3 text-left">Note</th>
                                <th scope="col" class="px-6 py-3 text-left">Lieu</th>
                                <th scope="col" class="px-6 py-3 text-left">Client</th>
                                <th scope="col" class="px-6 py-3 text-left">État du projet</th>
                                <th scope="col" class="px-6 py-3 text-left">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-4xl font-semibold text-gray-700">
                        {% for project in projects %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">{{ project.name }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ project.entryDate ? project.entryDate|date('Y-m-d') : '' }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ project.note }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ project.place }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ project.client }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ project.workInProgress }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <a href="{{ path('admin_editproject', {'id': project.id}) }}"><img src="{{ asset('build/images/crayon.png') }}"></a>
                                    <a href="{{ path('reference_show', {id: project.id}) }}"><img src="{{ asset('build/images/oeil.png') }}"></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="16">Pas d'enregistrements trouvés</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="flex flex-col text-right">
        <a href="{{ path('admin_newproject') }}"><input type ="submit" value="Créer un nouveau projet" class="bg-gray-700 hover:bg-yellow-600 transition duration-500 cursor-pointer text-white text-4xl font-bold py-6 px-9 rounded-full focus:outline-none focus:shadow-outline"></a>
        </div>
    </div>
    <div class="flex flex-col w-6/12 m-auto">
        <h1>Listes des partenaires</h1>
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8 bg-gray-200 rounded-xl">
            <div class="py-12 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="text-5xl font-semibold text-gray-700 bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left">Nom</th>
                                <th scope="col" class="px-6 py-3 text-left">Logo</th>
                                <th scope="col" class="px-6 py-3 text-left">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-4xl font-semibold text-gray-700">
                        {% for partner in partners %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">{{ partner.name }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">{{ partner.logo }}</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <a href="{{ path('admin_partner_edit', {'id': partner.id}) }}"><img src="{{ asset('build/images/crayon.png') }}"></a>
                                    <a href="{{ path('home') }}"><img src="{{ asset('build/images/oeil.png') }}"></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">pas d'enregistrements trouvés</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="flex flex-col text-right">
        <a href="{{ path('admin_partner_new') }}"><input type ="submit" value="Créer un nouveau partenaire" class="bg-gray-700 hover:bg-yellow-600 transition duration-500 cursor-pointer text-white text-4xl font-bold py-6 px-9 rounded-full focus:outline-none focus:shadow-outline"></a>
        </div>
    </div>
{% endblock %}
